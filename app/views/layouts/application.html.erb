<!DOCTYPE html>
<html>
  <head>
    <title>FestSuggest</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% flash.each do |type, message| %>
      <div class="alert alert-<%= type %> alert-dismissible text-center" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= sanitize(message) %>
      </div>
    <% end %>
    <div class="container well page-content">
      <center>
        <% if current_user %>
          Welcome, <%= current_user.username %>! (<%= link_to "Logout", logout_path, method: :delete %>)
        <% else %>
          <%= link_to "Login with Spotify", spotify_login_path %>
        <% end %>
      </center>
      <%= yield %>
    </div>
  </body>
</html>
